# Development Environment Configuration

NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=development_password
DB_NAME=cosmomedia_dev

# Service Ports
GATEWAY_PORT=3000
EMPLOYEE_SERVICE_PORT=3001
CLIENT_PROJECT_SERVICE_PORT=3002
BILLING_SERVICE_PORT=3003
SERVICE_CATALOG_PORT=3004

# Service URLs
EMPLOYEE_SERVICE_URL=http://localhost:3001
CLIENT_PROJECT_SERVICE_URL=http://localhost:3002
BILLING_SERVICE_URL=http://localhost:3003
SERVICE_CATALOG_URL=http://localhost:3004

# JWT Configuration
JWT_SECRET=development_jwt_secret_key_min_32_chars_long
JWT_EXPIRES_IN=24h

# Rate Limiting - More permissive for development
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug

# CORS - Permissive for development
CORS_ORIGIN=*

# Cache Configuration
CACHE_ENABLED=true
CACHE_DURATION=300000
