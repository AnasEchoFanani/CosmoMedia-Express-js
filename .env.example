# Node Environment
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=cosmomedia
DB_PASSWORD=password
DB_NAME=cosmomedia_dev

# Service Ports
GATEWAY_PORT=3001
EMPLOYEE_SERVICE_PORT=3002
CLIENT_PROJECT_SERVICE_PORT=3003
BILLING_SERVICE_PORT=3004
SERVICE_CATALOG_PORT=3005

# Service URLs (for inter-service communication)
EMPLOYEE_SERVICE_URL=http://localhost:3001
CLIENT_PROJECT_SERVICE_URL=http://localhost:3002
BILLING_SERVICE_URL=http://localhost:3003
SERVICE_CATALOG_URL=http://localhost:3004

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars_long
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info  # error, warn, info, debug

# CORS
CORS_ORIGIN=*  # Use specific origin in production

# Cache Configuration
CACHE_ENABLED=true
CACHE_DURATION=300000  # 5 minutes

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# AWS S3 Configuration (Optional)
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
