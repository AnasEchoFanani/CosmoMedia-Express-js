# Production Environment Configuration

NODE_ENV=production

# Database Configuration
DB_HOST=your_production_host
DB_PORT=3306
DB_USER=cosmomedia
DB_PASSWORD=password
DB_NAME=cosmomedia_dev

# Service Ports
GATEWAY_PORT=3001
EMPLOYEE_SERVICE_PORT=3002
CLIENT_PROJECT_SERVICE_PORT=3003
BILLING_SERVICE_PORT=3004
SERVICE_CATALOG_PORT=3005

# Service URLs - Use internal network URLs in production
EMPLOYEE_SERVICE_URL=http://employee-service:3001
CLIENT_PROJECT_SERVICE_URL=http://client-project-service:3002
BILLING_SERVICE_URL=http://billing-service:3003
SERVICE_CATALOG_URL=http://service-catalog:3004

# JWT Configuration
JWT_SECRET=your_secure_production_jwt_secret
JWT_EXPIRES_IN=12h

# Rate Limiting - Strict for production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS - Restrict to specific origin in production
CORS_ORIGIN=https://your-frontend-domain.com

# Cache Configuration
CACHE_ENABLED=true
CACHE_DURATION=300000

# Email Configuration
SMTP_HOST=smtp.production-provider.com
SMTP_PORT=587
SMTP_USER=your_production_smtp_user
SMTP_PASSWORD=your_production_smtp_password

# AWS S3 Configuration
S3_BUCKET=your-production-bucket
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_production_access_key
AWS_SECRET_ACCESS_KEY=your_production_secret_key
