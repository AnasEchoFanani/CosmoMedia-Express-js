# Test Environment Configuration

NODE_ENV=test

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=test_password
DB_NAME=cosmomedia_test

# Service Ports - Different from development to avoid conflicts
GATEWAY_PORT=4000
EMPLOYEE_SERVICE_PORT=4001
CLIENT_PROJECT_SERVICE_PORT=4002
BILLING_SERVICE_PORT=4003
SERVICE_CATALOG_PORT=4004

# Service URLs
EMPLOYEE_SERVICE_URL=http://localhost:4001
CLIENT_PROJECT_SERVICE_URL=http://localhost:4002
BILLING_SERVICE_URL=http://localhost:4003
SERVICE_CATALOG_URL=http://localhost:4004

# JWT Configuration
JWT_SECRET=test_jwt_secret_key_min_32_chars_long
JWT_EXPIRES_IN=1h

# Rate Limiting - No limits for testing
RATE_LIMIT_WINDOW_MS=0
RATE_LIMIT_MAX_REQUESTS=0

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=*

# Cache Configuration - Disabled for testing
CACHE_ENABLED=false
CACHE_DURATION=0
