{
  "name": "cosmomedia",
  "version": "1.0.0",
  "description": "My Company app",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "logs:dev": "tail -f logs/development/combined.log | pino-pretty",
    "logs:test": "tail -f logs/test/combined.log | pino-pretty",
    "logs:staging": "tail -f logs/staging/combined.log | pino-pretty",
    "logs:prod": "tail -f logs/production/combined.log | pino-pretty",
    "logs:error": "tail -f logs/*/error.log | pino-pretty",
    "logs:clean": "rm -rf logs/*",
    "start": "cross-env NODE_ENV=production node scripts/start.js",
    "dev": "cross-env NODE_ENV=development nodemon scripts/start.js | pino-pretty",
    "test:services": "cross-env NODE_ENV=test node scripts/start.js",
    "start:gateway": "cross-env NODE_ENV=production node gateway-service/src/app.js",
    "start:employee": "cross-env NODE_ENV=production node employee-service/src/app.js",
    "start:client-project": "cross-env NODE_ENV=production node client-project-service/src/app.js",
    "start:billing": "cross-env NODE_ENV=production node billing-service/src/app.js",
    "start:service-catalog": "cross-env NODE_ENV=production node service-catalog/src/app.js",
    "dev:gateway": "cross-env NODE_ENV=development nodemon gateway-service/src/app.js | pino-pretty",
    "dev:employee": "cross-env NODE_ENV=development nodemon employee-service/src/app.js | pino-pretty",
    "dev:client-project": "cross-env NODE_ENV=development nodemon client-project-service/src/app.js | pino-pretty",
    "dev:billing": "cross-env NODE_ENV=development nodemon billing-service/src/app.js | pino-pretty",
    "dev:service-catalog": "cross-env NODE_ENV=development nodemon service-catalog/src/app.js | pino-pretty",
    "test:gateway": "cross-env NODE_ENV=test nodemon gateway-service/src/app.js | pino-pretty",
    "test:employee": "cross-env NODE_ENV=test nodemon employee-service/src/app.js | pino-pretty",
    "test:client-project": "cross-env NODE_ENV=test nodemon client-project-service/src/app.js | pino-pretty",
    "test:billing": "cross-env NODE_ENV=test nodemon billing-service/src/app.js | pino-pretty",
    "test:service-catalog": "cross-env NODE_ENV=test nodemon service-catalog/src/app.js | pino-pretty",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "env:dev": "cp .env.development .env",
    "env:test": "cp .env.test .env",
    "env:prod": "cp .env.production .env",
    "docker:build": "docker build -t cosmomedia-base -f docker/Dockerfile.base .",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "docker:down": "docker-compose down -v",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "install:cloudwatch": "npm install pino-cloudwatch@^2.1.2"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.540.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-openapi-validator": "^5.4.6",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "ioredis": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.2",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "redis": "^4.7.0",
    "rotating-file-stream": "^3.2.1",
    "sequelize": "^6.37.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "chai": "^5.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0"
  },
  "author": "Carmine DiMascio <cdimascio@gmail.com> (https://github.com/cdimascio)"
}
